@model IEnumerable<GerenciamentoClientes.Models.Cliente>

<div class="container">
    <div class="row" style="align-items: center;">
        <div class="col-md-10">
            <h1 class="display-4">Gerenciamento de Clientes</h1>
        </div>
        <div class="col-md-2 text-right">
            <a class="btn btn-outline-success" asp-action="Create"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                </svg>
                Cadastro
            </a>
        </div>
    </div>

    <div class="table-responsive" style="margin-top: 2rem;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Data de Nascimento</th>
                    <th>CEP</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                        <td>@Html.DisplayFor(modelItem => item.CEP)</td>
                        <td style="text-align: center;">
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ClienteId">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Adicione aqui qualquer script jQuery ou JavaScript adicional necessário para interatividade.
    </script>
}
