<!-- _TabelaClientes.cshtml -->
@model IEnumerable<GerenciamentoClientes.Models.Cliente>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ações</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>CEP</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a>
                    <a class="btn btn-warning btn-sm" style="margin: 0 0.5rem;" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ClienteId">Excluir</a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                <td>@Html.DisplayFor(modelItem => item.CEP)</td>
               
            </tr>
        }
    </tbody>
</table>
